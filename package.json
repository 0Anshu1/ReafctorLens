{
  "name": "refactorlens",
  "version": "1.0.0",
  "description": "AI-powered code refactoring analysis tool",
  "main": "server/server.js",
  "scripts": {
    "start": "node server/server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/server.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx"
  },
  "keywords": [
    "refactoring",
    "code-analysis",
    "ast",
    "legacy-code",
    "modernization"
  ],
  "author": "RefactorLens Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "bull": "^4.11.3",
    "redis": "^4.6.7",
    "tree-sitter": "^0.20.4",
    "tree-sitter-javascript": "^0.20.1",
    "tree-sitter-java": "^0.20.2",
    "tree-sitter-python": "^0.20.4",
    "tree-sitter-c": "^0.20.6",
    "tree-sitter-cpp": "^0.20.0",
    "diff": "^5.1.0",
    "axios": "^1.5.0",
    "dotenv": "^16.3.1",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "joi": "^17.9.2",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0",
    "jest": "^29.6.2",
    "eslint": "^8.47.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
